{
  "name": "default-db-template",
  "version": "1.1.0",
  "main": "index.html",
  "description": "Default Digital Butlers config for html projects",
  "scripts": {
    "serve": "del /q server && NODE_ENV=development parcel serve src/*.html --dist-dir server --port 3000",
    "build": "del /q build && NODE_ENV=production parcel build src/*.html --no-cache --dist-dir build --public-url ./",
    "build-no-minify": "del /q build && NODE_ENV=production parcel build src/index.html --no-minify --no-cache --dist-dir build --public-url ./",
    "lint-js": "npx eslint src/**/*.js",
    "lint-js-fix": "npx eslint --fix src/**/*.js",
    "lint-scss": "npx stylelint src/**/*.scss",
    "lint-scss-fix": "npx stylelint --fix src/**/*.scss"
  },
  "keywords": [],
  "author": "kirillsakun",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/runtime-corejs2": "^7.9.2",
    "@parcel/transformer-sass": "^2.0.1",
    "autoprefixer": "^9.7.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "parcel": "^2.0.1",
    "parcel-plugin-custom-dist-structure": "^1.1.18",
    "parcel-plugin-imagemin": "^4.0.2",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "parcel-resolver-ignore": "^1.0.2",
    "postcss": "^8.3.11",
    "postcss-sass": "^0.5.0",
    "postcss-scss": "^4.0.2",
    "sass": "^1.32.13",
    "sharp": "^0.29.3",
    "stylelint": "^14.1.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "stylelint-scss": "^4.0.0",
    "win-node-env": "^0.4.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "overrideBrowserslist": [
          "> 1%",
          "last 4 versions",
          "ie >= 9"
        ]
      }
    }
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "minifyFontValues": {
          "removeQuotes": false
        },
        "normalizeUrl": false
      }
    ]
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 2,
          "regenerator": true
        }
      ]
    ]
  },
  "customDistStructure": {
    "config": {
      ".css": "styles",
      ".css.map": "styles",
      ".js": "scripts",
      ".js.map": "scripts",
      "fonts": [
        ".ttf",
        ".otf",
        ".woff",
        ".woff2",
        ".eot"
      ],
      "images": [
        ".jpg",
        ".png",
        ".svg",
        ".gif",
        ".ttf",
        ".bmp"
      ]
    },
    "options": {
      "development": true
    }
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "public",
        "env": "development"
      },
      {
        "staticPath": "public",
        "env": "production"
      }
    ],
    "watcherGlob": "**"
  },
  "htmlnano": {
    "collapseAttributeWhitespace": false,
    "collapseBooleanAttributes": false,
    "collapseWhitespace": false,
    "minifyJson": false,
    "minifySvg": false
  },
  "parcelIgnore": [],
  "dependencies": {
    "assemble": "^0.3.83",
    "grunt": "^0.4.5",
    "styles": "^0.2.1"
  }
}
